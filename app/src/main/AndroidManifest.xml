<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.studiobeu.yaniv">

    <application
        android:name=".application.YanivApp"
        android:allowBackup="true"
        android:icon="@mipmap/icone_yanive"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/icone_yanive_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.NoActionBar">
        <activity android:name=".ui.main.home.HomeActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".ui.main.activity.MainActivity"/>
        <activity android:name=".ui.main.activity.PlayerSelect" />
        <activity android:name=".ui.main.activity.GameActivity" />
        <activity android:name=".ui.main.activity.YanivActivity" />
        <activity android:name=".ui.main.activity.EditPlayerActivity" />
    </application>

</manifest>