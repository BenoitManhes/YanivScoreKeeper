<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.studiobeu.yaniv.ui.custom.view.CardButtonView
        android:id="@+id/home_menu_card_rules"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginBottom="30dp"
        android:rotation="-28"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/home_menu_card_resume"
        app:layout_constraintBottom_toBottomOf="parent"
        app:text="@string/home_button_rules" />

    <com.studiobeu.yaniv.ui.custom.view.CardButtonView
        android:id="@+id/home_menu_card_resume"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="20dp"
        android:rotation="17"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/home_menu_card_new"
        app:text="@string/home_button_resume" />

    <com.studiobeu.yaniv.ui.custom.view.CardButtonView
        android:id="@+id/home_menu_card_new"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:rotation="-14"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:text="@string/home_button_new" />
</androidx.constraintlayout.widget.ConstraintLayout>